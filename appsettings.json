{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=requirements_analyzer;Username=req_analyzer;Password=your_password"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/requirements-analyzer-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ]
  },
  "AllowedHosts": "*",
  "PerplexityApi": {
    "ApiKey": "",
    "BaseUrl": "https://api.perplexity.ai",
    "Model": "llama-3.1-sonar-large-128k-online",
    "MaxTokens": 2000,
    "Temperature": 0.1,
    "TimeoutSeconds": 30
  },
  "Features": {
    "EnableDatabasePersistence": false,
    "EnableBatchProcessing": true,
    "EnableMockFallback": true,
    "MaxRequirementLength": 5000,
    "MaxBatchSize": 50
  }
}